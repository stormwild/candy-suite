{
  "manifest_version": 3,
  "name": "Candy Suite v1",
  "version": "1.0.0",
  "description": "A suite of page tools. Copy page title as a markdown link",
  "permissions": ["tabs", "clipboardWrite", "activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/candy-16.png",
      "32": "icons/candy-32.png",
      "48": "icons/candy-48.png",
      "128": "icons/candy-128.png"
    }
  },
  "icons": {
    "16": "icons/candy-16.png",
    "32": "icons/candy-32.png",
    "48": "icons/candy-48.png",
    "128": "icons/candy-128.png"
  }
}
